<div class="row">
  <div class="col-xs-6 col-sm-1">
  	<div class="list-group">
	{{#each itemController='flickr/item-controller'}}
		{{#link-to 'flickr.active' id class="list-group-item"}}{{title}}{{/link-to}} 
	{{/each}}
	</div>
  </div>
  <div class="col-xs-6 col-sm-2">
  	<div class="list-group">
	{{#each itemController='flickr/item-controller'}}
	    {{#each brands}}
		    {{#link-to 'flickr.search' brand class="list-group-item"}}{{title}}{{/link-to}}
	    {{/each}}
	{{/each}}
	</div>
  </div>
  <div class="clearfix visible-xs-block"></div>
  <div class="col-xs-6 col-sm-7" id="images">
	{{#each itemController='flickr/item-controller'}}
	{{#if current}}
		<div class="pagination text-center"> 
		{{#if prev}}{{#link-to 'flickr.completed' id prev}}<span class="glyphicon glyphicon-chevron-left"></span>{{/link-to}}{{/if}}
		    {{current}} / {{pages}} 
		{{#if next}}{{#link-to 'flickr.completed' id next}}<span class="glyphicon glyphicon-chevron-right"></span>{{/link-to}}{{/if}}
		</div>
	{{/if}}
	<div class="row">
		{{#each images}}
		<div class="col-xs-8 col-sm-4 thumbnail">
			<img class="result" {{bind-attr src=src}}>
		</div>
		{{/each}}
	</div>
	{{/each}}
  </div>
</div>



